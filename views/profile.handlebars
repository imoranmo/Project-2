{{!-- Shows blog posts made by the user
        Option to add new post
        When clicking existing post, they can delete or update that post and then save it and go back to the dashboard --}}
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Exo:wght@600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/tailwind.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>




    <div class="container mx-auto my-5 p-5 grid grid-row-2">
        <div class="md:flex no-wrap md:-mx-2 ">
            <!-- Left Side -->
            <div class="w-full md:w-3/12 md:mx-2">
                <!-- Profile Card -->
                <div class="bg-white p-3 border-t-4 border-yellow-500 rounded-lg shadow-lg">
                    <div class="image overflow-hidden">
                        <img class="h-auto w-full mx-auto rounded-full"
                            src="https://uwosh.edu/deanofstudents/wp-content/uploads/sites/156/2019/02/profile-default.jpg"
                            alt="">
                    </div>
                    <h1 class="text-gray-900 font-bold text-xl leading-8 my-1">{{user.first_name}} {{user.last_name}}</h1>
                    <h3 class="text-gray-600 font-lg text-semibold leading-6 mb-2">Username: <span>{{user.user_name}}</span></h3>
                    <p class="text-sm text-grey-500 leading-6">BIO: {{user.bio}}.</p>
                    
                </div>
                <!-- End of profile card -->
                <div class="my-4 "></div>
                <!-- Friends card -->
                <div class="bg-white p-3 rounded-lg shadow-lg">
                    <div class="flex items-center space-x-3 font-semibold text-gray-900 text-xl leading-8 mb-4">
                        <span>Instruments</span>
                    </div>
                    <div class="grid grid-cols-3 gap-1">
                        {{#each user.instruments as |instrument| }}  
                        <div class="rounded-lg bg-yellow-600 text-center">{{instrument.name}}</div>
                        {{/each}}
                    </div>
                </div>
                <!-- End of friends card -->
            </div>
            <!-- Right Side -->
          
            
            <div class="w-full md:w-9/12 mx-2 h-64 shadow-lg">
                
                <!-- Profile tab -->
                
                <!-- About Section -->
                <div class="bg-white p-3 shadow-lg rounded-lg">
                    <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8">
                        <span class="tracking-wide">About</span>
                    </div>
                    <div class="text-gray-700">
                       
                <!-- End of about section -->

                <div class="my-4"></div>
                     <div class="mt-6">
                    {{#each posts as |post| }}   
                    <div class="max-w-4xl px-10 py-6 mx-auto bg-white rounded-lg shadow-md">
                        <button id="editPost" class="px-3 py-2 mx-1 font-medium text-gray-700 bg-white rounded-md hover:bg-blue-500 hover:text-white">Update Post</button>
                        <div class="flex items-center justify-between"><span class="font-light text-gray-600">{{format_date post.date_created}} by: {{post.user.user_name}}</span>
                        </div>
                        <div class="mt-2"><a href="#" class="text-2xl font-bold text-gray-700 hover:underline">{{post.title}}</a>
                            <div>{{post.rhythm.name}}</div>
                            <div>{{{post.content}}}</div>
                        </div>
                        <div class="flex items-center justify-between mt-4">
                            {{!-- Comments.js uses "nextSiblingElement to get to comments from the toggle-comment btn" --}}
                            <button id="toggle-comments" value="{{post.id}}" class="text-blue-500 hover:underline">Show Comments</button>
                            <div class="hidden" id="comments">
                                <h1>Comments:</h1>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                
                </div>
                <!-- End of profile tab -->
            </div>
        </div>
    </div>

                <script src="/js/comment.js"></script>